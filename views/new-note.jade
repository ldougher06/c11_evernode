if note
  h1 Edit Note
else
  h1 New Note

- var item = note || {title: '', text: ''}
- var override = note ? '/' + note._id + '?_method=PUT' : '' /* if note use method-override PUT method*/                                                           /*otherwise, empty string*/
form(method='POST', action='/notes#{override}')
  .input-group
    label(for='title') Title
    input#title(type='text', name='title', value='#{item.title}')
  .input-group
    label(for='text') Text
    textarea#text(name='text')= item.text
  .input-group
    input(type='submit', value='Save')
